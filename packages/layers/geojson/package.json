		"point-in-polygon": "^1.0.1"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^21.0.1",
		"@rollup/plugin-node-resolve": "^13.1.3",
		"rollup": "^2.66.0",
		"rollup-plugin-sourcemaps": "^0.6.3",
		"rollup-plugin-web-worker-loader": "1.6.1",
		"typescript": ">4.4.0"
	}
