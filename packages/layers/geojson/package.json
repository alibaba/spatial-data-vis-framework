		"@gs.i/utils-geometry": "0.2.1-alpha.32",
		"@gs.i/utils-math": "0.2.1-alpha.32",
		"@gs.i/utils-specify": "0.2.1-alpha.32",
		"@polaris.gl/base": "0.1.0-alpha.38",
		"@polaris.gl/gsi": "0.1.0-alpha.38",
		"@polaris.gl/utils-indicator": "0.1.0-alpha.38",
