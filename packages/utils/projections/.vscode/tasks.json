{
	// 有关 tasks.json 格式的文档，请参见
	// https://go.microsoft.com/fwlink/?LinkId=733558
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": ["build", "${workspaceFolder}/csharp/polaris-projection.csproj"],
			"problemMatcher": "$tsc"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": ["publish", "${workspaceFolder}/csharp/polaris-projection.csproj"],
			"problemMatcher": "$tsc"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": ["watch", "run", "${workspaceFolder}/csharp/polaris-projection.csproj"],
			"problemMatcher": "$tsc"
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": ["$tsc"]
		}
	]
}
